<html>
    <head>
        <title>MiniMsg | <%= title%></title>
    </head>
    <body>
        <h1 class="send-msg-heading">Send new message</h1>
        <form method="post" action="/new" class="message-form">
            <label>
                Username
                <input type="text" name="username" value="<%= locals.username ? username : '' %>">
            </label>
            <label>
                Message
                <input type="text" name="message" value="<%= locals.message ? message : '' %>">
            </label>
            <button type="submit">Send</button>
        </form>
        <% if(locals.errors) {%>
            <ul>
                <% errors.forEach(err => { %>
                    <li><%= err.msg %></li>
                    <% }) %>
            </ul>
            <% } %>
    </body>
</html>